@using Web.Models;
@model List<Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="hero-section">
    <!-- HERO SLIDE -->
    <div class="hero-slide">
        <div class="owl-carousel carousel-nav-center owl-loaded owl-drag" id="hero-carousel">
            <div class="owl-stage-outer">
                <div class="owl-stage" style="transform: translate3d(-5220px, 0px, 0px); transition: all 0.25s ease 0s; width: 9135px;">
                    @Html.Action("BannerActive", "Home")
                    @Html.Action("TVSeriesBanner", "Home")
                    @Html.Action("Banner", "Home")

                </div>
            </div><div class="owl-nav"><button type="button" role="presentation" class="owl-prev"><i class="bx bx-chevron-left"></i></button><button type="button" role="presentation" class="owl-next"><i class="bx bx-chevron-right"></i></button></div><div class="owl-dots disabled"></div>
        </div>
    </div>
</div>
<div class="movies-slide carousel-nav-center owl-carousel owl-loaded owl-drag">
    <div class="owl-stage-outer">
        <div class="owl-stage" style="transform: translate3d(0px, 0px, 0px); transition: all 0s ease 0s; width: 2170px;">
            @{
                int i = 0;
                foreach (var item in Model)
                {
                    i++;
                    <div class="owl-item" style="width: 295px">
                        <a href="@Url.Action("DetailMovie","Detail",new { @MovieID = item.MovieID})" class="movie-item">
                            <img src="@Url.Content("~/Images/Index/"+item.Image)" alt="">
                            <div class="movie-item-content">
                                <div class="movie-item-title">
                                    @item.Name
                                </div>
                                <div class="movie-infos">
                                    <div class="movie-info">
                                        <i class="bx bxs-star"></i>
                                        <span>@item.Rate</span>
                                    </div>
                                    <div class="movie-info">
                                        <i class="bx bxs-time"></i>
                                        <span>@item.Time</span>
                                    </div>
                                    <div class="movie-info">
                                        <span>HD</span>
                                    </div>
                                    <div class="movie-info">
                                        <span>16+</span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
        </div>
    </div><div class="owl-nav"><button type="button" role="presentation" class="owl-prev disabled"><i class="bx bx-chevron-left"></i></button><button type="button" role="presentation" class="owl-next"><i class="bx bx-chevron-right"></i></button></div><div class="owl-dots disabled"></div>
</div>
@Html.Action("Category3", "Home")
@Html.Action("GetaMovie","Home")
@Html.Action("Category2", "Home")
@Html.Action("Category1", "Home")
@Html.Action("TvSeries", "Home")
@if ((Session["Pay"] == null && Session["User"] != null))
{
    <p>
        @Html.Action("Pay", "Pay")
    </p>
}
else if (Session["User"] == null)
{
    @Html.Action("Pay", "Pay")
}
else
{
    <p></p>
}